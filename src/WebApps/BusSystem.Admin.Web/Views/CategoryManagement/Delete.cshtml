@model BusSystem.Admin.Web.Models.CategoryDto
@{
    ViewData["Title"] = "Delete Category";
}

<partial name="_BackButton" />

<h1>Delete Category</h1>
<h3 class="text-danger">Are you sure you want to delete this category?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">Category ID</dt>
        <dd class="col-sm-9">@Model.CategoryId</dd>
        <dt class="col-sm-3">Name</dt>
        <dd class="col-sm-9">@Model.Name</dd>
        <dt class="col-sm-3">Bus ID</dt>
        <dd class="col-sm-9">@Model.BusId</dd>
    </dl>
    
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="CategoryId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
