@model BusSystem.Admin.Web.Models.CategoryDto
@{
    ViewData["Title"] = "Edit Category";
}

<partial name="_BackButton" />

<h1>Edit Category</h1>
<form asp-action="Edit" method="post" asp-route-id="@Model.CategoryId">
    <input type="hidden" asp-for="CategoryId" />
    <input type="hidden" asp-for="BusId" />
    <div class="mb-3">
        <label class="form-label">Bus</label>
        <select asp-for="BusId" class="form-select" asp-items="ViewBag.Buses" disabled></select>
    </div>
    <div class="mb-3">
        <label asp-for="Name" class="form-label">Category Name</label>
        <input asp-for="Name" class="form-control" required />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
