@model IEnumerable<BusSystem.Admin.Web.Controllers.CategoryManagementController.CategoryWithBusDto>
@{
    ViewData["Title"] = "Categories";
}

<partial name="_BackButton" />

<h1 class="page-title mb-4">Categories</h1>

@if (TempData["SuccessMessage"] != null)
{
    <div class="notification notification--success alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle-fill"></i>
        <strong>Success!</strong> @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="notification notification--error alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle-fill"></i>
        <strong>Error!</strong> @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (User.IsInRole("SuperAdmin") || User.IsInRole("Admin"))
{
    <a asp-action="Create" class="action-button btn btn-primary mb-3">
        <i class="bi bi-plus-circle"></i> Add Category
    </a>
}
<table class="data-table table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Bus</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var c in Model)
    {
        <tr class="data-table__row">
            <td class="data-table__cell">@c.CategoryId</td>
            <td class="data-table__cell">@c.Name</td>
            <td class="data-table__cell">@c.BusPlateNumber</td>
            <td class="data-table__cell data-table__cell--actions">
                <a asp-action="Edit" asp-route-id="@c.CategoryId">Edit</a>
                @if (User.IsInRole("SuperAdmin") || User.IsInRole("Admin"))
                {
                    <text> | </text>
                    <a asp-action="Delete" asp-route-id="@c.CategoryId">Delete</a>
                }
            </td>
        </tr>
    }
    </tbody>
</table>
