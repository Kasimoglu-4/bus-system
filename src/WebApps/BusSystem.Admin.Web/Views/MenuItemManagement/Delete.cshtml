@model BusSystem.Admin.Web.Models.MenuItemDto
@{
    ViewData["Title"] = "Delete Menu Item";
}

<partial name="_BackButton" />

<h1>Delete Menu Item</h1>
<h3 class="text-danger">Are you sure you want to delete this menu item?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">Menu Item ID</dt>
        <dd class="col-sm-9">@Model.MenuItemId</dd>
        <dt class="col-sm-3">Name</dt>
        <dd class="col-sm-9">@Model.Name</dd>
        <dt class="col-sm-3">Description</dt>
        <dd class="col-sm-9">@Model.Description</dd>
        <dt class="col-sm-3">Image</dt>
        <dd class="col-sm-9">
            @if (!string.IsNullOrEmpty(Model.Image))
            {
                <img src="@Model.Image" 
                     alt="@Model.Name" 
                     loading="lazy" 
                     width="100" 
                     height="100" 
                     style="width:100px;height:100px;object-fit:cover;" />
            }
        </dd>
        <dt class="col-sm-3">Price</dt>
        <dd class="col-sm-9">@Model.Price.ToString("C")</dd>
        <dt class="col-sm-3">Category ID</dt>
        <dd class="col-sm-9">@Model.CategoryId</dd>
    </dl>
    
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="MenuItemId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
