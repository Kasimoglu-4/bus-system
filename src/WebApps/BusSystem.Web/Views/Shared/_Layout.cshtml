    @if (!(ViewData["HideBanner"] as bool? ?? false))
    {
        <!-- Hero banner with branding -->
        <div class="hero-banner">
            <picture>
                <source srcset="@Url.Content("~/images/bus-cover.webp")" type="image/webp">
                <img src="@Url.Content("~/images/bus-cover.webp")" 
                     class="hero-banner__image img-fluid w-100" 
                     alt="Bus System Hero Banner"
                     width="1920"
                     height="400"
                     fetchpriority="high" />
            </picture>

            <!-- Branding: Logo + Title -->
            <div class="hero-banner__branding d-flex align-items-center">
                <picture>
                    <source srcset="@Url.Content("~/images/bus-logo.webp")" type="image/webp">
                    <img src="@Url.Content("~/images/bus-logo.png")" 
                         alt="Bus System Logo" 
                         class="hero-banner__logo me-2"
                         width="80"
                         height="80" />
                </picture>
                <span class="hero-banner__title fw-bold text-white">MVS Games</span>
            </div>
        </div>
    }

    <div class="container mt-4">
        <main role="main" class="main-content pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="site-footer border-top text-muted">
        <div class="container">
            &copy; 2025 - BusSystem.Web - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    
    <!-- Optimized script loading: Remove jQuery if not needed, use Bootstrap without jQuery -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js" defer></script>
    <script src="~/js/site.js" asp-append-version="true" defer></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
